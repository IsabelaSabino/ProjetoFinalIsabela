@model ProjetoFinalIsabela.Models.ProcedimentoRealizado

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
<h1>Criar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoId" class="control-label"></label>
                <select asp-for="ProcedimentoId" class ="form-control" asp-items="ViewBag.ProcedimentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select asp-for="ColaboradorId" class ="form-control" asp-items="ViewBag.ColaboradorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LocalRealizacaoId" class="control-label"></label>
                <select asp-for="LocalRealizacaoId" class ="form-control" asp-items="ViewBag.LocalRealizacaoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DataRealizacao" class="control-label"></label>
                <input asp-for="DataRealizacao" class="form-control" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacaoRealizacao" class="control-label"></label>
                <input asp-for="ObservacaoRealizacao" class="form-control" />
                <span asp-validation-for="ObservacaoRealizacao" class="text-danger"></span>
            </div>
            <div class="btns">
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                </div>
                <div class="voltar">
                    <a asp-action="Index">Voltar</a>
                </div>
            </div>
         
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ProjetoFinalIsabela.Models.Cidade

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar isso?</h3>
<div>
 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CidadeNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidadeNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado.EstadoNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" style="text-decoration:none; color:#96B6C5;">voltar</a>
    </form>
</div>
